<!doctype html>

<html lang="en">
    <head>
        <title> The Gallery</title>
        <link href="gallery.css" type="text/css" rel="stylesheet"/>
        <meta charset="utf-8"/>
    </head>
    <body>
        <h1> The Gallery</h1>
        <nav class = "nav"> 
            <a class="current" href="/homepage">Home</a>
            <a href="/logout">Logout</a>
            <a href="#about">About Us</a>
            <a href="/upload">Upload Art</a>
            <a href="/search">Search</a>
            <a href= "/user-homepage/">My User Page</a>
        </nav> 
        
        <section class = "row">
                {{#each item}}
                <section class = "column">
                    <figure>
                        <a href="../details/{{id}}">
                        <img src="itemImages/{{this.id}}/0.jpeg" alt="Picture of an artpiece for sale" width = "200" height = "200"/></a>
                        <figcaption> {{this.title}}, {{this.price}} Â£</figcaption> 
                        {{#each this.interest}}
                            <p>{{this.user}} has level {{this.interest}} interest</p>
                            
                            
                        {{/each}}
                    </figure>
                </section>
                {{/each}}
        </section>
        
    </body>
</html>
