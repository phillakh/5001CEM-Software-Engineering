<!doctype html>

<html lang="en">
	<head>
		<title>{{title}}</title>
		<link href="../details.css" type="text/css" rel="stylesheet" />
		<link href="../popupForm.css" type="text/css" rel="stylesheet" />
	</head>
	<body>
		<h1>{{title}}</h1>
		<h2>
			<nav class = "nav"> 
				<a href="/homepage">Home</a>
				<a href="#about">About Us</a>
				<a href="/upload">Upload Art</a>
				<input type="text" placeholder="Search ...">
        	</nav> 
		</h2>
		<section class='sellerSide'>
			<section class='sellerProfile'>
				<img  class='profilePicture' src="../avatars/{{owner}}.jpeg" width="100" height="100" alt="Profile Picture"/>
				<p>{{owner}}</p>
			</section>
			<section class='sellerDetails'>
					<p>{{title}}</p>
					<p>{{price}}</p>
			</section>		
			<footer class='sellerDetailsFooter'>CONTACT SELLER BUTTON</footer>
		</section>

		<aside class='imageSide'>
			<img id="artwork" class='artPicture' src="../itemImages/{{id}}/0.jpg" alt="Picture of the Art Piece"/>
				<img class="thumbnails" src="../itemImages/{{id}}/0.jpg" alt="Picture of the Art Piece"/>
				<img class="thumbnails" src="../itemImages/{{id}}/1.jpg" alt="Picture of the Art Piece"/>
				<img class="thumbnails" src="../itemImages/{{id}}/2.jpg" alt="Picture of the Art Piece"/>
			<button onclick="pictureChange('prev')"><</button>
			<button onclick="pictureChange('next')">></button>
			<footer class="imageSideFooter">{{longDesc}}</footer>
		</aside>

		<button type="button" id="button">Interested</button>
        <section class="bg-modal">
            <section class="modal-content">
                <section class="close">+</section>
                <form action="">
                    <input type="text" placeholder = "1-5">
                    <a href="" class="button" value="{{popupForm}}">Sumbit</a>
                </form>
            </section>
        </section>
	</body>
	<script>	
		var currentImage = 0
		// set array length based on number of images added
		images = ["../itemImages/{{id}}/0.jpg", "../itemImages/{{id}}/1.jpg", "../itemImages/{{id}}/2.jpg"];
	function pictureChange(param)
	{
		if(param === 'next')
      	{
        	currentImage++;
            if(currentImage === images.length){ currentImage = images.length - 1; }
		}
		else{
            currentImage--;
            if(currentImage < 0){ currentImage = 0; }
        }
		document.getElementById('artwork').src=images[currentImage];
	}
	</script>
</html>